%%
%% Beamer theme "mice" (for Marine Icing Presentations)
%%   beamercolorthememice.sty

%%
%%
\mode<presentation>

%%
%% Global color specifications
\setbeamercolor{structure}{fg=munRed}
\setbeamercolor{normal text}{fg=munGrey}
\setbeamercolor{alerted text}{fg=munRed}

%%
%% Frame specifications
\setbeamercolor{frametitle}{fg=munRed}
\setbeamercolor{framesubtitle}{fg=grey}

%%
%% Block specifications
\setbeamercolor{block title}{fg=munRed}
\setbeamercolor{block title example}{fg=munRed}
\setbeamercolor{block body alerted}{fg=munRed}

%%
%% Title page
\setbeamercolor{title page header}{fg=munRed}
\setbeamercolor{subtitle}{fg=munGrey}
\setbeamercolor{author}{fg=munGrey}
\setbeamercolor{date}{fg=munGrey}
\setbeamercolor{institute}{fg=munRed}

%%
%% TOC
\setbeamercolor{section in toc}{fg=munGrey}
\setbeamercolor{subsection in toc}{fg=munGrey!75}

%%
\mode<all>
